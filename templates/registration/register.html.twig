{% extends 'base.html.twig' %}
 
{% block title %}Register{% endblock %}

{% block body  %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="container">
        <h1 class="h3 mb-3 mt-5 text-center font-weight-normal">Rejestracja</h1>
        {% form_theme registrationForm 'bootstrap_4_layout.html.twig'%}
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.imie) }}
            {{ form_row(registrationForm.nazwisko) }}
            {{ form_row(registrationForm.nick) }}
            {{ form_row(registrationForm.ulica) }}
            {{ form_row(registrationForm.nr_domu) }}
            {{ form_row(registrationForm.nr_lokalu) }}
            {{ form_row(registrationForm.nr_tel_kom) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn btn-primary">Załóż konto</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
